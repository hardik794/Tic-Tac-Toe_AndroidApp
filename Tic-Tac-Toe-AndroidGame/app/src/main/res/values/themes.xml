<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TicTacToeFun" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">#00FFFFFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#DC0C2653</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3B7DF7</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#888484</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#92B7C7E2</item>
    </style>

    <style parent="TextAppearance.AppCompat" name="TextLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#0543B6</item>
        <item name="colorControlNormal">#3b7df8</item>
        <item name="colorControlActivated">#3b7df8</item>
    </style>

    <style parent="@android:style/Widget.CompoundButton" name="RadioButtonStyle">
        <item name="background">@drawable/backradio</item>
        <item name="android:button">@null</item>
    </style>
</resources>